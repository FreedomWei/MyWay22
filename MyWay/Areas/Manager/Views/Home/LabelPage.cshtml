@{
    ViewBag.Title = "LabelPage";
    Layout = "~/Areas/Manager/Views/Shared/_LayoutPage1.cshtml";
}

@using Mldel.Content

<style type="text/css">
    a.gray2btn {
        color: #0075DC;
    }

    .greenbtn1 {
        cursor: pointer;
    }

    .page2 {
        padding-top: 20px;
        float: right;
    }

    input.txt_index {
        height: 27px;
        width: 30px;
        border: 1px solid #ccc;
    }

    .pagenum {
        cursor: pointer;
        background-color: transparent;
    }

    .first_page {
        text-decoration: underline;
    }

    .last_page {
        text-decoration: underline;
    }
</style>
<!-- 当前位置 -->
<div class="mainBox" style="height:auto!important;height:550px;min-height:550px;">
    <h3><a href="###" onclick="AddLabel()" class="actionBtn add">添加标签</a>标签管理</h3>
    <div class="filter">
    </div>
    <div id="pagemain">
        <form action="/m/home/GetLabels" class="SearchForm" id="form1">
            <div class="searchall">
                <div class="search" style="padding-bottom:20px;">
                    <input type="text" name="txt_search" class="rectinput inpMain" placeholder="搜索关键字">
                    <input name="submit" class="btnGray rectinput rectgreenbtn" onclick="onSearchSubmit()" type="button" value="搜索">
                </div>
            </div>
        </form>
        <div class="content-1" id="contentBox">
            <table class="table table-bordered tableBasic" width="100%" border="0" cellpadding="8" cellspacing="0">
                <thead>
                    <tr>
                        <th width="30" align="center">Id</th>
                        <th width="60" align="center">标签名</th>
                        <th width="30" align="center">操作</th>
                    </tr>
                </thead>
                <tbody class="tbody"></tbody>
            </table>
            <script type="textml" class="PagingItemTemplate">
                <tr data-cid="#Id#">
                    <td align="center">#Id#</td>
                    <td align="center">#LabelName#</td>
                    <td align="center">
                        <a class="gray2btn" href="javascript:;" data-a="b1" onclick="EditByLabel(this)">编辑</a>
                    </td>
                </tr>
            </script>
            <div class="page2 ">
            </div>
        </div>

    </div>
</div>

<script src="/Content/js/Paging2.js"></script>


<script>
    var paging;
    $(function () {
        paging = $("#pagemain").Paging2({
            PagingItemTemplateSelector: ".PagingItemTemplate",
            BindDataType: 1,
        });


        function onSearchSubmit() {
            $("#form1").submit();
        }

    });
   

    function EditByLabel(thiss) {
        var id = $(thiss).parent().parent().attr('data-cid');
        var name = $(thiss).parent().prev().text();
        var html = '<div style="padding-top: 10px;padding-left: 20px;">标签名：<input cid="' + id + '" type="text" name="author" onkeyup="CheckLabel()" id="author" value="' + name + '" class="inpMain"><br /><i id="jiance" style="position: fixed;"></i><input type="button" style="margin-left: 150px;margin-top: 10px;" name="submit" class="btn" onclick="PostDataByLabel()" value="提交"></div>';
        //页面层
        layer.open({
            type: 1,
            skin: 'layui-layer-rim', //加上边框
            area: ['250px', '125px'], //宽高
            content: html
        });
    }
    //修改标签
    function PostDataByLabel() {
        var id = $("#author").attr("cid");
        var name = $("#author").val();
        if (name.length == 0) {
            layer.msg("请输入标签名", {icon:6});
            return;
        }
        $.post2('/m/home/UpdateLabel', { id: id, name: name }, function (data) {
            layer.alert("保存成功", { icon: 6 });
            layer.closeAll('page');
            paging.Refresh();
        });
    }


    function AddLabel() {
        var html = '<div style="padding-top: 10px;padding-left: 20px;">标签名：<input cid="" type="text" name="author" id="author" value="" onkeyup="CheckLabel()" class="inpMain"><br /><i id="jiance" style="position: fixed;"></i><input type="button" style="margin-left: 150px;margin-top: 10px;" name="submit" class="btn" onclick="PostDataByLabel()" value="提交" id="tijiao"></div>';
        //页面层
        layer.open({
            type: 1,
            skin: 'layui-layer-rim', //加上边框
            area: ['250px', '125px'], //宽高
            content: html
        });
    }
     
    //检查标签是否存在
    function CheckLabel() {
        var name = $("#author").val();
        if (name.length == 0) {
            $("#jiance").text("");
            $("#tijiao").removeAttr("disabled");
            return;
        }
        $.post2('/m/home/CheckLabel', { name: name }, function (data) {
            if (data == "nook") {
                $("#jiance").text("");
                $("#tijiao").removeAttr("disabled");
            } else {
                $("#jiance").text("标签已存在").css("color","red");
                $("#tijiao").attr("disabled", true);
            }
          
        });
    }



    </script>
